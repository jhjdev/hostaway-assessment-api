{
  "name": "hostaway-assessment-api",
  "version": "1.0.0",
  "description": "An API service for the Hostaway weather app.",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec tsx src/index.ts",
    "build": "tsc",
    "build:prod": "npm ci && npm run build",
    "start": "node dist/index.js",
    "start:prod": "echo 'Starting production server...' && pwd && ls -la && echo 'Dist contents:' && ls -la dist/ && node dist/index.js",
    "start:debug": "echo 'Current dir:' && pwd && echo 'Files:' && ls -la && echo 'Dist contents:' && ls -la dist/ && node dist/index.js",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "seed": "tsx src/scripts/seed.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --watchAll=false",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "perf:test": "tsx src/scripts/performance.ts",
    "prepare": "husky || true"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jhjdev/hostaway-assessment-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/jhjdev/hostaway-assessment-api/issues"
  },
  "homepage": "https://github.com/jhjdev/hostaway-assessment-api#readme",
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/env": "^5.0.2",
    "@fastify/helmet": "^13.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "fastify": "^5.4.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.1",
    "nodemailer": "^7.0.4",
    "prom-client": "^15.1.3",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/autocannon": "^7.12.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongodb-memory-server": "^1.8.0",
    "@types/node": "^24.0.8",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "autocannon": "^8.0.0",
    "eslint": "^9.30.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.2",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
